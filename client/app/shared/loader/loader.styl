loaderContainer
   display: none

.loaderBackground
   top: 0
   left: 0
   padding-left: 100px
   position: absolute
   z-index: 1000
   height: 100%
   width: 100%
   background-color: #808080
   opacity: 0.3

.loaderContent
   position: absolute
   border: 1px solid #000
   background-color: #fff
   font-weight: bold
   height: 100px
   width: 300px
   z-index: 1000
   text-align: center
